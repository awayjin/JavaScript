<?xml version="1.0" encoding="utf-8"?>
<project name="Jan Dialog" default="compress" basedir=".">
    <description>ant js title</description>
    <property name="src" location="src"/>
    <property name="build" location="build"/>
    <property name="lib" location="lib"/>

     <target name="init">
         <mkdir dir="${build}"/>
     </target>

    <target name="concat" depends="init">
            <concat destfile="${build}/janDialog-1.0.js">
                <filelist dir="${src}" files="intro.js, jan-dialog.js"></filelist>
            </concat>
    </target>

    <target name="compress" depends="concat">
        <java jar="${lib}/yuicompressor.jar" fork="true">
              <arg line="--type js --charset utf-8 -o ${build}/janDialog-1.0.min.js ${build}/janDialog-1.0.js"/>
       </java>
    </target>

     <target name="clean">
         <delete dir="${build}"/>
     </target>
</project>